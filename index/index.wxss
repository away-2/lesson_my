page{
    position: relative;/*相对定位*/
    width:100vw;/*相对单位 viewport width*/
    height:100vh;/*相对单位 viewport height*/
}
.container{
       position:absolute;/*绝对定位*/
       top:50%;
       left:50%;
       transform: translate(-50%,-50%);
       width:80%;
       height: 60%;
       border:1px solid black;
       margin: 0px auto;
       overflow: hidden;
       border-radius: 5px;
       text-align: center;

}
.title{
    color: black;
    font-size: 20px;
}